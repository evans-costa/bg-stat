{
  "name": "bg-stat",
  "version": "1.0.0",
  "description": "Boardgame collection status for personal use",
  "main": "index.js",
  "scripts": {
    "dev": "kill-port 3000 && npm run services:up && npm run next",
    "next": "next dev",
    "services:up": "docker compose -f ./infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./infra/compose.yaml stop",
    "migration:run": "node -r dotenv-expand/config infra/scripts/db-connection.js && node-pg-migrate up --envPath ./.env -m infra/migrations",
    "migration:create": "node-pg-migrate --migrations-dir ./infra/migrations create",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "Evandro de Souza Costa",
  "license": "MIT",
  "dependencies": {
    "@auth/core": "^0.22.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.5.0",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
    "kill-port": "^2.0.1",
    "next": "^13.4.19",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3"
  }
}
